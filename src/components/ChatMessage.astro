---
import { format } from 'date-fns';

interface Props {
    message: string;
    sender: string;
    timestamp: Date;
    isOwn?: boolean;
}

const { message, sender, timestamp, isOwn = false } = Astro.props;
---

<div class={`flex gap-2 mb-4 ${isOwn ? 'flex-row-reverse' : ''}`}>
    <div class={`flex-shrink-0 w-8 h-8 rounded-full flex items-center justify-center text-sm font-medium text-white ${
        isOwn 
        ? 'bg-gradient-to-r from-amber-400 to-pink-400' 
        : 'bg-gray-400'
    }`}>
        {sender[0].toUpperCase()}
    </div>
    
    <div class={`max-w-[70%] ${isOwn ? 'items-end' : ''}`}>
        <div class={`px-4 py-3 rounded-2xl shadow-sm ${
        isOwn 
            ? 'bg-gradient-to-br from-indigo-900 to-purple-900 text-white' 
            : 'bg-white border border-gray-100'
        }`}>
        <p class={`text-sm leading-relaxed ${
            isOwn 
            ? 'bg-gradient-to-r from-yellow-300 to-pink-500 text-transparent bg-clip-text font-medium' 
            : ''
        }`}>
            {message}
        </p>
        </div>
        
        <div class={`text-xs mt-1 ${
        isOwn 
            ? 'text-right text-gray-300' 
            : 'text-gray-500'
        }`}>
        {format(timestamp, 'HH:mm')}
        </div>
    </div>
</div>