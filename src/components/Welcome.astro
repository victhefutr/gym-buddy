---
import background from '../assets/background.svg';
import { SignedOut, SignInButton } from "@clerk/astro/components";
---

<div id="container">
	<img id="background" src={background.src} alt="" fetchpriority="high" />
	<main>
		<section id="hero">
			<div class="hero-content">
				<h1>AI-Powered<br /><span class="gradient-text">Fitness Coach</span></h1>
				<p class="subtitle">Your 24/7 personal trainer powered by artificial intelligence</p>
				<div id="links">
					<SignedOut>
						<SignInButton>
							<a class="button" href="#get-started">Get Started Free</a>
						</SignInButton>					
					</SignedOut>
					
					<a class="secondary" href="#learn-more">
						Learn More
						<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
							<path d="M5 12h14M12 5l7 7-7 7"/>
						</svg>
					</a>
				</div>
			</div>
		</section>

		<section id="features" class="box">
			<div class="feature">
				<svg width="32" height="32" fill="none" xmlns="http://www.w3.org/2000/svg">
					<path d="M24.667 12c1.333 1.414 2 3.192 2 5.334 0 4.62-4.934 5.7-7.334 12C18.444 28.567 18 27.456 18 26c0-4.642 6.667-7.053 6.667-14Z" fill="#FF6B00"/>
					<path d="M19.333 6.667c1.6 1.65 2.4 3.43 2.4 5.333 0 6.602-8.06 7.59-6.4 17.334C13.111 27.787 12 25.564 12 22.666c0-4.434 7.333-8 7.333-16Z" fill="#FFA500"/>
				</svg>
				<h2>Personalized Workouts</h2>
				<p>AI-generated workout plans tailored to your goals and fitness level</p>
			</div>
			<div class="feature">
				<svg width="32" height="32" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
					<path d="M12 15a3 3 0 1 1 0-6 3 3 0 0 1 0 6Z" fill="#FF6B00"/>
					<path d="M2 12.88v-2l1-1v4l-1-1Zm20 0v-2l-1-1v4l1-1Z" fill="#FFA500"/>
					<path d="M19 12a7 7 0 1 1-14 0 7 7 0 0 1 14 0Z" stroke="#FF6B00" stroke-width="2"/>
				</svg>
				<h2>Real-time Tracking</h2>
				<p>Monitor your progress and get instant feedback on your form</p>
			</div>
			<div class="feature">
				<svg width="32" height="32" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
					<path d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 0 1-7.6 4.7 8.38 8.38 0 0 1-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 0 1-.9-3.8 8.5 8.5 0 0 1 4.7-7.6 8.38 8.38 0 0 1 3.8-.9h.5a8.48 8.48 0 0 1 8 8v.5Z" stroke="#FF6B00" stroke-width="2"/>
					<circle cx="12" cy="12" r="3" fill="#FFA500"/>
				</svg>
				<h2>24/7 AI Chat Support</h2>
				<p>Get instant answers to your fitness and nutrition questions anytime</p>
			</div>
		</section>
	</main>
</div>

<style>
	#background {
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		z-index: -1;
		filter: blur(100px);
	}

	#container {
		font-family: Inter, Roboto, 'Helvetica Neue', 'Arial Nova', 'Nimbus Sans', Arial, sans-serif;
		height: 100%;
	}

	main {
		height: 100%;
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		padding: 2rem;
		max-width: 1200px;
		margin: 0 auto;
	}

	#hero {
		text-align: center;
		margin-bottom: 4rem;
	}

	.hero-content {
		max-width: 800px;
		margin: 0 auto;
	}

	h1 {
		font-size: 4rem;
		font-weight: bold;
		margin: 0;
		line-height: 1.1;
	}

	.gradient-text {
		background: linear-gradient(83.21deg, #FF6B00 0%, #FFA500 100%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}

	.subtitle {
		font-size: 1.5rem;
		color: #4b5563;
		margin: 1.5rem 0 2rem;
	}

	#links {
		display: flex;
		gap: 1rem;
		justify-content: center;
	}

	#links a {
		display: flex;
		align-items: center;
		padding: 1rem 2rem;
		font-size: 1.125rem;
		text-decoration: none;
		transition: all 0.2s;
		border-radius: 10px;
	}

	#links a.button {
		color: white;
		background: linear-gradient(83.21deg, #FF6B00 0%, #FFA500 100%);
		box-shadow:
			inset 0 0 0 1px rgba(255, 255, 255, 0.12),
			inset 0 -2px 0 rgba(0, 0, 0, 0.24);
	}

	#links a.button:hover {
		transform: translateY(-2px);
		box-shadow:
			inset 0 0 0 1px rgba(255, 255, 255, 0.12),
			inset 0 -2px 0 rgba(0, 0, 0, 0.24),
			0 4px 12px rgba(255, 107, 0, 0.25);
	}

	#links a.secondary {
		color: #111827;
		background: rgba(255, 255, 255, 0.9);
		backdrop-filter: blur(10px);
	}

	#links a.secondary:hover {
		background: white;
		transform: translateY(-2px);
	}

	#links a svg {
		height: 1.25em;
		margin-left: 0.5rem;
	}

	#features {
		display: grid;
		grid-template-columns: repeat(3, 1fr);
		gap: 2rem;
		width: 100%;
		background: rgba(255, 255, 255, 0.9);
		backdrop-filter: blur(10px);
		padding: 3rem;
	}

	.feature {
		text-align: center;
	}

	.feature svg {
		width: 48px;
		height: 48px;
		margin-bottom: 1rem;
	}

	.feature h2 {
		font-size: 1.5rem;
		color: #111827;
		margin: 0 0 0.5rem;
	}

	.feature p {
		color: #4b5563;
		font-size: 1rem;
		line-height: 1.5;
		margin: 0;
	}

	.box {
		border-radius: 24px;
		border: 1px solid rgba(255, 255, 255, 0.5);
	}

	@media screen and (max-width: 768px) {
		h1 {
			font-size: 3rem;
		}

		.subtitle {
			font-size: 1.25rem;
		}

		#features {
			grid-template-columns: 1fr;
			padding: 2rem;
		}

		#links {
			flex-direction: column;
		}

		#links a {
			width: 100%;
			justify-content: center;
		}
	}
</style>