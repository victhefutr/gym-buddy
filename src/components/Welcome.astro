---
import background from '../assets/background.svg';
import { SignedOut, SignInButton } from "@clerk/astro/components";

---
<div id="container" class="font-sans h-screen bg-cover relative overflow-hidden">
    <img id="background" src={background.src} alt="" class="fixed inset-0 w-full h-full object-cover -z-10 blur-3xl" />
    <main class="h-full flex flex-col items-center justify-center px-4 max-w-5xl mx-auto">
        <section id="hero" class="text-center mb-16">
            <div class="hero-content max-w-2xl mx-auto">
                <h1 class="text-5xl font-bold leading-tight">
                    AI-Powered<br /><span class="bg-gradient-to-r from-orange-500 to-yellow-400 bg-clip-text text-transparent">Fitness Coach</span>
                </h1>
                <p class="text-xl text-gray-600 my-6">Your 24/7 personal trainer powered by artificial intelligence</p>
                <div id="links" class="flex flex-col sm:flex-row gap-4 justify-center">
                    <SignedOut>
                        <SignInButton>
                            <a class="button bg-gradient-to-r from-orange-500 to-yellow-400 text-white py-3 px-6 rounded-lg shadow-lg hover:-translate-y-1 transition" href="/create-buddy">Get Started Free</a>
                        </SignInButton>
                    </SignedOut>
                    <a class="secondary text-gray-800 bg-white/90 backdrop-blur-md py-3 px-6 rounded-lg hover:bg-white transition flex items-center" href="/create-buddy">
                        Learn More
                        <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 ml-2" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M5 12h14M12 5l7 7-7 7" />
                        </svg>
                    </a>
                </div>
            </div>
        </section>
        <section id="features" class="grid grid-cols-1 sm:grid-cols-3 gap-8 p-8 bg-white/90 backdrop-blur-md rounded-2xl">
            <div class="feature text-center">
                <svg class="w-12 h-12 mx-auto mb-4" fill="#FF6B00" xmlns="http://www.w3.org/2000/svg"><path d="M24.667 12c1.333 1.414 2 3.192 2 5.334 0 4.62-4.934 5.7-7.334 12C18.444 28.567 18 27.456 18 26c0-4.642 6.667-7.053 6.667-14Z" fill="#FF6B00"/><path d="M19.333 6.667c1.6 1.65 2.4 3.43 2.4 5.333 0 6.602-8.06 7.59-6.4 17.334C13.111 27.787 12 25.564 12 22.666c0-4.434 7.333-8 7.333-16Z" fill="#FFA500"/></svg>
                <h2 class="text-xl font-semibold text-gray-900">Personalized Workouts</h2>
                <p class="text-gray-600">AI-generated workout plans tailored to your goals and fitness level</p>
            </div>
            <div class="feature text-center">
                <svg class="w-12 h-12 mx-auto mb-4" fill="#FF6B00" xmlns="http://www.w3.org/2000/svg"><path d="M12 15a3 3 0 1 1 0-6 3 3 0 0 1 0 6Z" fill="#FF6B00"/><path d="M2 12.88v-2l1-1v4l-1-1Zm20 0v-2l-1-1v4l1-1Z" fill="#FFA500"/><path d="M19 12a7 7 0 1 1-14 0 7 7 0 0 1 14 0Z" stroke="#FF6B00" stroke-width="2"/></svg>
                <h2 class="text-xl font-semibold text-gray-900">Real-time Tracking</h2>
                <p class="text-gray-600">Monitor your progress and get instant feedback on your form</p>
            </div>
            <div class="feature text-center">
                <svg class="w-12 h-12 mx-auto mb-4" fill="#FF6B00" xmlns="http://www.w3.org/2000/svg"><path d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 0 1-7.6 4.7 8.38 8.38 0 0 1-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 0 1-.9-3.8 8.5 8.5 0 0 1 4.7-7.6 8.38 8.38 0 0 1 3.8-.9h.5a8.48 8.48 0 0 1 8 8v.5Z" stroke="#FF6B00" stroke-width="2"/><circle cx="12" cy="12" r="3" fill="#FFA500"/></svg>
                <h2 class="text-xl font-semibold text-gray-900">24/7 AI Chat Support</h2>
                <p class="text-gray-600">Get instant answers to your fitness and nutrition questions anytime</p>
            </div>
        </section>
    </main>
</div>
